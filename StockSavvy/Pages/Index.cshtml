@page
@model IndexModel
@{
    ViewBag.Title = "Login - Register StockSavvy";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StockSavvy</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<bodyLogin>

    <div class="contain">
        <div class="blueBg">
            <div class="box signin">
                <h2>Already have an account ?</h2>
                <button class="signinBtn" asp-page-handler="Login">Sign in</button>
            </div>
            <div class="box signup">
                <h2>Don't have an account ?</h2>
                <button class="signupBtn">Sign up</button>
            </div>

        </div>
        <div class="formBx">
            <div class="form signinForm">

                <form method="post">
                    @if (Model.UserLoginEx != null)
                    {
                        <div class="alert alert-warning">
                            <h2>@Model.UserLoginEx</h2>
                        </div>
                    }
                    <h3>Sign In</h3>

                    <input asp-for="UserName" placeholder="Username" type="text" />
                    @*<span asp-validation-for="UserDetail.UserName"></span>*@

                    <input asp-for="Password" placeholder="Pasword" type="password" />
                    @*<span asp-validation-for="UserDetail.PasswordHash"></span>*@

                    <input type="submit" value="Login" asp-page-handler="LoginRequest" />
                    <a href="" class="forgot">Forgot password</a>

                </form>


            </div>
            <div class="form signupForm">
                <form method="post">
                    @if (Model.UserRegisterEx != null)
                    {
                        <div class="alert alert-warning">
                            <h2>@Model.UserRegisterEx</h2>
                        </div>
                    }
                    <h3>Sign Up</h3>
                    <input asp-for="FirstName" placeholder="First name" type="text" />
                    @*<span asp-validation-for="UserDetail.FirstName"></span>*@
                    <input asp-for="LastName" placeholder="Last name" type="text" />
                    @*<span asp-validation-for="UserDetail.LastName"></span>*@
                    <input asp-for="UserName" placeholder="Username" type="text" />
                    @*<span asp-validation-for="UserDetail.UserName"></span>*@
                    <input asp-for="Password" placeholder="Password" type="password" />
                    @*<span asp-validation-for="UserDetail.PasswordHash"></span>*@

                    <input type="submit" value="Register" asp-page-handler="RegisterRequest" />
                </form>
            </div>
        </div>
    </div>

    <script>
        const signinBtn = document.querySelector('.signinBtn');
        const signupBtn = document.querySelector('.signupBtn');
        const formBx = document.querySelector('.formBx');
        const body = document.querySelector("bodyLogin");

        signupBtn.onclick = function () {
            formBx.classList.add('active');
            body.classList.add('active');
        }
        signinBtn.onclick = function () {
            formBx.classList.remove('active');
            body.classList.remove('active');

        }
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</bodyLogin>
</html>
